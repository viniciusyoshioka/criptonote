{
    "extends": "@vinicius1313/tsconfig/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components": ["src/components"],
            "@database": ["src/database"],
            "@database/*": ["src/database/*"],
            "@hooks": ["src/hooks"],
